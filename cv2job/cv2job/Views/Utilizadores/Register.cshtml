@model cv2job.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}


<div class="register">
    <div class="row">
        <div class="span6">
            <h2>Registe-se Já!</h2>
            <br />
            <p>O CV2JOB ajuda-te a comunicar e a partilhar os teus dados com empresas que andam a tua procura!</p>
            <br />
            <p>Registe-se e pode: </p>
            <p>Manter-se informado sobre seus contactos e o seu setor </p>
            <p>Localizar as pessoas, empresas e o conhecimento de que você precisa </p>
            <p>Gerir a sua identidade profissional online </p>
            <p>E ainda gerar o seu Curriculum Vitae! </p>

        </div>

        <div class="span6">
            <div class="formy bred">
                <h3>Registar uma nova conta</h3>
                <div class="form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
									 
                        <!-- Register form (not working)-->
                        <form class="form-horizontal">

                            <!-- Username -->
                            <div class="control-group">
                                @Html.LabelFor(m => m.UserName, "Username", new { @class = "control-label" })
                                <div class="controls">@Html.TextBoxFor(m => m.UserName, new { @class = "input-large", @id = "username" })
                                    @Html.ValidationMessageFor(m => m.UserName)

                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(m => m.Nome, "Nome", new { @class = "control-label" })
                                <div class="controls">@Html.TextBoxFor(m => m.Nome, new { @class = "input-large", @id = "username" })
                                    @Html.ValidationMessageFor(m => m.Nome)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(m => m.Nome, "Apelido", new { @class = "control-label" })
                                <div class="controls">@Html.TextBoxFor(m => m.Apelido, new { @class = "input-large", @id = "username" })
                                    @Html.ValidationMessageFor(m => m.Apelido)
                                </div>
                            </div>

                            <div class="select-radio">
                                <label>Sexo</label>
                                <label>
                                    <input name="Sexo" type="radio" value="radio1">Masculino
                                    &nbsp;
                                    <input name="Sexo" type="radio" value="radio2">Feminino  &nbsp;
                                @Html.ValidationMessageFor(m => m.Sexo)
                                     
                                </label>

                            </div>


                            <div class="control-group">
                                @Html.LabelFor(m => m.Email, "Email", new { @class = "control-label" })
                                <div class="controls">@Html.TextBoxFor(m => m.Email, new { @class = "input-large", @id = "username" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>


                            <!-- Password -->
                            <div class="control-group">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label", @for = "email" })


                                <div class="controls">
                                    @Html.PasswordFor(m => m.Password, new { @class = "input-large", @id = "password" })
                                    @Html.ValidationMessageFor(m => m.Password)

                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(m => m.ConfirmPassword, "Confirmar Password", new { @class = "control-label", @for = "email" })


                                <div class="controls">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-large", @id = "password" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)

                                </div>



                            </div>
                            <!-- Checkbox -->

                            <script type="text/javascript">
                                EnableSubmit = function (val) {
                                    var sbmt = document.getElementById("Accept");

                                    if (val.checked == true) {
                                        sbmt.disabled = false;
                                    }
                                    else {
                                        sbmt.disabled = true;
                                    }
                                }
                            </script>

                            <div class="control-group">
                                <div class="controls">
                                    <label class="checkbox inline">
                                        <input type="checkbox" id="inlineCheckbox1" value="agree" onclick="EnableSubmit(this)">
                                        Concordo com os Termos e condições
                                    </label>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="form-actions">
                                <!-- Buttons -->
                                <button type="submit" id="Accept" class="btn" disabled>Registar</button>
                                <button type="reset" class="btn">Limpar</button>
                            </div>
                        </form>
                    }
                    Já tem uma conta? <a href="login">Login</a>
                </div>
            </div>

        </div>
    </div>
</div>



