@model IEnumerable<cv2job.Models.Anuncio>

@{
    ViewBag.Title = "Anúncios";
}
@using PagedList.Mvc;
@using PagedList;

<div class="page-head" style="padding-top: 3%;">
    <!-- Page heading -->
    <h2 class="pull-left">Anúncios 
		  <!-- page meta -->
        <span class="page-meta"></span>
    </h2>


    <!-- Breadcrumb -->
    <div class="bread-crumb pull-right">
        <a href="/"><i class="icon-home"></i>Home</a>
        <!-- Divider -->
        <span class="divider">/</span>
        <a href="/Corporacoes/Gerir" class="bread-current">Anúncios</a>
    </div>

    <div class="clearfix"></div>

</div>



<div class="matter">

    <div class="container-fluid">

        <a href="/Anuncios/Create" class="btn btn-primary">Adicionar Anúncio</a>



        <div class="widget wlightblue">

            <div class="widget-head">
                <div class="pull-left">Anúncios Criados</div>
                <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="icon-chevron-up"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">

                <table class="table  table-bordered ">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th style="width: 20%; text-align: center">Ferramentas</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in ViewBag.Anuncios)
                        {
                            <tr>
                                <td>
                                    <a href="/Corporacoes/Details/@item.AnuncioID">@item.Titulo</a>
                                </td>
                                <td style="text-align: center;">
                                    <div class="btn-group">
                                    <button class="btn btn-mini btn-success"><i class="icon-plus"></i></button>
                                    <button class="btn btn-mini btn-warning"><i class="icon-pencil"></i></button>
                                    @using (Html.BeginForm("Delete", "Anuncios", new { id=item.AnuncioID}))
                                    {  @Html.AntiForgeryToken()
                                
                                       
                                        <button class="btn btn-mini btn-danger" type="submit" name="id" ><i class="icon-remove"></i></button>
                                    }
                                        </div>
                                </td>
                            </tr>

                    
                 
                        }

                    </tbody>
                </table>


            </div>

            <div class="widget-foot">

                <div class="pull-right" style="margin-top: -1%; margin-bottom: -1%;">
                    @Html.PagedListPager((IPagedList)ViewBag.Anuncios, page => Url.Action("Gerir", new { page = page }))
                </div>
                <div class="clearfix"></div>

            </div>

        </div>


    </div>
</div>
